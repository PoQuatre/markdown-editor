{
  "name": "note-down",
  "version": "0.1.0",
  "description": "A collaborative note editor for markdown",
  "author": "PoQuatre <leflem.mateo2002@gmail.com>",
  "license": "MIT",
  "private": true,
  "source": [
    "public/index.html",
    "public/404.html"
  ],
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "scripts": {
    "dev": "parcel",
    "build": "parcel build",
    "build:ci": "parcel build --public-url=/note-down/",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check \"**/*.{js,jsx,ts,tsx,json,html,md,svg,yml}\"",
    "lint:eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "lint:stylelint": "stylelint --aei \"src/**/*.css\"",
    "commit": "git-cz",
    "prepare": "husky install",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "*.css": "stylelint --cache --fix",
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "*.{js,jsx,ts,tsx,json,html,md,svg,yml}": "prettier --write"
  },
  "parcel-namer-rewrite": {
    "chain": "@parcel/namer-default",
    "rules": {
      "(.+)\\.js": "./js/$1{.hash}.js",
      "(.+)\\.css": "./css/$1{.hash}.css",
      "(.+)\\.(png|jpe?g|webp|avif)": "./assets/$1{.hash}.$2"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": ".commitizenrc.json"
    }
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@parcel/compressor-brotli": "^2.4.1",
    "@parcel/compressor-gzip": "^2.4.1",
    "@types/babel__core": "^7.1.19",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-typescript": "^3.0.0",
    "eslint-import-resolver-typescript": "^2.7.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "parcel": "^2.4.0",
    "parcel-namer-rewrite": "^2.0.0-rc.2",
    "parcel-resolver-ts-base-url": "^1.1.5",
    "patch-package": "^6.4.7",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.4.3",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "^2.6.1",
    "stylelint": "^14.6.1",
    "stylelint-config-idiomatic-order": "^8.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.6.3"
  }
}
